@model SalesWebMvc.Models.Departamento

@{
    ViewData["Title"] = "Apagar departamento selecionado?";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja apagar o registro selecionado?</h3>
<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Apagar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-default" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
