@model IEnumerable<SalesWebMvc.Models.Vendedor>
@{
    ViewData["Title"] = "Vendedores";
}
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Criar" class="btn btn-default">Novo</a> <!--Crio um botão novo para cadastro-->
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Id) <!--expressão lambda que reconhece o termo model como vendedor.-->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome) <!--expressão lambda que reconhece o termo model como vendedor.-->
            </th>

            <th>
                @Html.DisplayNameFor(model => model.E_mail)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DataAniversario)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
            <th>
                <!--espaço em branco no título da lista para add os links de Editar|Detalhes|Apagar-->
            </th>
        </tr>
    </thead> <!-- encerro o cabeçalho da lista.-->
    <tbody> <!--aqui começo a listar os itens da minha lista.-->
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.E_mail)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DataAniversario)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SalarioBase)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Apagar" asp-route-id="@item.Id">Apagar</a> <!-- chamo a ação é Apagar através do asp-action, que chama a ação lá do controller do vendedor.
                        O Apagar do asp-rout-id, é o link para chamar essa a ação.-->
                </td>
            </tr>
        }
    </tbody>
</table>